extends layout

block content
    
    .container
      
      hr
      // Title
      .row
        .col-md-4.col-md-offset-4
           .login-panel.panel.panel-default
             .panel-heading
               h3.panel-title Create an account
              .panel-body
                    .row
                    .col-lg-6
                    form#form_add_user(name='adduser', method='post', action='/adduser')
                        //New user form                                      
                        .form-group
                        label First Name
                        |   
                        // Email tag                                          
                        input.form-control(type='text', placeholder='Enter Your First Name', name='first_name')
                        br
                        label Last Name
                        |                                             
                        input.form-control(type='text', placeholder='Enter Your Last Name', name='last_name')
                        |                                                        
                        br
                        label Password
                        |                                             
                        input.form-control(type='text', placeholder='Enter Password', name='password')
                        |                                    
                        br
                        label Re-type Password
                        |                                             
                        input.form-control(type='text', placeholder='Enter Password again')
                        |                                              
                        br
                        button.btn.btn-lg.btn-success.btn-block(type='submit') Save                         
                        //End of form
